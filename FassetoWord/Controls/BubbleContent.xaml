<UserControl x:Class="FasettoWord.Controls.BubbleContent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FasettoWord.Controls"
             mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Speech bubble rectangle -->
        <Border CornerRadius="10"
                Margin="5 0 0 0"
                Padding="15"
                Background="{StaticResource BackgroundLightBrush}">

            <Border.Effect>
                <DropShadowEffect BlurRadius="4" ShadowDepth="2" Color="{StaticResource WordLightBlue}"/>
            </Border.Effect>
            
            <!-- Message text -->
            <TextBlock Text="Testus modus"
                       TextWrapping="Wrap"
                       FontFamily="{StaticResource LatoRegular}"
                       Foreground="{StaticResource WordDarkBlueBrush}"
                       VerticalAlignment="Center"/>
        </Border>

        <!-- Chat bubble anchor -->
        <Path Grid.Row="1"
              Panel.ZIndex="1"
              Margin="15,-1,15,0"
              HorizontalAlignment="Left"
              Data="M0,0 L10,10 L20,0"
              Fill="{StaticResource BackgroundLightBrush}">
            <Path.Effect>
                <DropShadowEffect BlurRadius="3" ShadowDepth="3" Color="{StaticResource WordLightBlue}"/>
            </Path.Effect>
        </Path>
    </Grid>

</UserControl>
